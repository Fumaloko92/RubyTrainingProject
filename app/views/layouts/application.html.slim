doctype html
html
  head
    title= "Luca\'s Blog"
    = csrf_meta_tags
    
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload' 
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    script type="application/x-javascript" addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); }
    script type="text/javascript" jQuery(document).ready(function($) {$(".scroll").click(function(event){event.preventDefault();$('html,body').animate({scrollTop:$(this.hash).offset().top},1000);});});
  body
    div class="header-top"
      div class="container"
        div class="head-main"
          = link_to posts_path
            = image_tag "logo.jpg"         				
    div class="header"
      div class="container"
        div class="head"
          div class="navigation"
            span class="menu"
            ul class="navig"
              li
                = link_to "Homepage", posts_path
              - if !current_user
                li
                  = link_to "Register", new_user_registration_path
                li
                  = link_to "Log In", new_user_session_path
              - else
                li
                  = link_to "Edit profile", edit_user_registration_path
                li
                  = link_to "Log Out", destroy_user_session_path
          -if current_user
            div class="header-right"  
              ul
                li Logged in as:
                li
                  = current_user.name if current_user.name 
                  = " " 
                  = current_user.surname if current_user.surname
                li
                  = current_user.email       
    div class="container"
      .p2= yield
    
    br
    br
    div class="footer"
      div class="container"
        div class="footer-text"
          p 
            | Â© 2016 Salfi Luca. All Rights Reserved | Design by 
            = link_to "W3layouts", "http://w3layouts.com/" 
      

  